<?xml version="1.0" encoding="utf-8"?>
<manifest package="name.zhengrr.rrdemo_java_android"
          xmlns:android="http://schemas.android.com/apk/res/android">

   <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
      <activity android:name=".MainActivity">
         <intent-filter>
            <action android:name="android.intent.action.MAIN"/>

            <category android:name="android.intent.category.LAUNCHER"/>
         </intent-filter>
      </activity>
      <activity
         android:name=".LifecycleActivity"
         android:label="@string/title_activity_lifecycle"
         android:theme="@style/AppTheme.NoActionBar">
      </activity>
      <activity
         android:name=".JumperActivity"
         android:label="@string/title_activity_jumper"
         android:theme="@style/AppTheme.NoActionBar">
      </activity>
      <activity
         android:name=".JumpedActivity"
         android:label="@string/title_activity_jumped"
         android:theme="@style/AppTheme.NoActionBar">
      </activity>
   </application>

</manifest>