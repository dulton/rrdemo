<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="vertical"
   android:paddingBottom="@dimen/activity_bottom_margin"
   android:paddingEnd="@dimen/activity_end_margin"
   android:paddingLeft="@dimen/activity_start_margin"
   android:paddingRight="@dimen/activity_end_margin"
   android:paddingStart="@dimen/activity_start_margin"
   android:paddingTop="@dimen/activity_top_margin"
   tools:context=".ui.OnClickActivity">

   <Button
      android:layout_width="match_parent"
      android:layout_height="@dimen/widget_recommend"
      android:onClick="onClickByAttribute"
      android:text="@string/button_on_click_by_attribute"/>

   <Button
      android:id="@+id/onclick_button2"
      android:layout_width="match_parent"
      android:layout_height="@dimen/widget_recommend"
      android:layout_marginTop="@dimen/spacing_minimum"
      android:text="New Button"/>
</LinearLayout>
